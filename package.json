{
  "name": "realm-exporter",
  "version": "1.0.1",
  "description": "Export a Realm database into a more traditional format (e.g. CSV)",
  "author": "Diogo Os√≥rio <diogo.g.osorio@gmail.com>",
  "license": "MIT",
  "private": false,
  "types": "build/types/src/**/*.d.ts",
  "files": [
    "build"
  ],
  "engines": {
    "node": "^8"
  },
  "bin": {
    "realm-exporter": "build/main/src/cli.js"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.test.ts --exit",
    "clean": "rm -rf ./build",
    "reset": "git fetch && git reset --hard origin/master",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "doc": "typedoc --out doc/ src/",
    "npm": "yarn clean && yarn reset && yarn lint && yarn test && yarn build && yarn publish"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.3",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "prettier": "1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "commander": "^2.18.0",
    "realm": "^2.16.2"
  }
}
