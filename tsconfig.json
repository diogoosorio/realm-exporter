{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "build/types",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "outDir": "build/main",
    "lib": [
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "node",
      "realm"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}